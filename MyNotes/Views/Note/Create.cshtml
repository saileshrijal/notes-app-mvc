@model MyNotes.ViewModels.NoteViewModel

@{
    ViewData["Title"] = "Create Note";
}


<div class="row">
    <div class="col-8 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-10">
                <h1 class="mt-2">Create Note</h1>
            </div>
            <div class="col-2"><a class="btn btn-success form-control" asp-action="Index"><i
                        class="bi bi-arrow-left-circle-fill"></i> Go Back</a></div>
        </div>



        <hr />
        <form asp-action="Create" asp-controller="Note" method="post">
            <div class="mb-3">
                <label asp-for="Title"></label>
                <input type="text" asp-for="Title" class="form-control">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="mb-3">
                <div class="d-flex align-items-center justify-content-center gap-3">
                    <label>Choose Background Color</label>
                    <input type="color" asp-for="Color" value="#dc143c">
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="form-control btn btn-success"><i class="bi bi-file-earmark-fill"></i>
                    Save</button>
            </div>
        </form>
    </div>
</div>