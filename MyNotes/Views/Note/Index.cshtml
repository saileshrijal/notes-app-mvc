@model List<Note>

@{
    ViewData["Title"] = "List Of Notes";
}

<div class="row">
    <div class="col-12 mx-auto">
        <div class="row d-flex align-items-center">
            <div class="col-10">
                <h1 class="mt-2">List Of Notes</h1>
            </div>
            <div class="col-2"><a class="btn btn-success form-control" asp-action="Create"><i
                        class="bi bi-plus-circle-fill"></i> Create Note</a></div>
        </div>

        <hr />

        @if (Model.Count > 0)
        {
            <div class="row">
                @foreach (var note in Model.OrderByDescending(x => x.CreatedDate))
                {
                    <div class="col-4">
                        <div class="p-3 text-white rounded-2 my-3 btns-container" style="background-color: @note.Color;">
                            <h2>@note.Title</h2>
                            <hr>
                            <p>@note.Description</p>
                            <div class="top-btns">
                                <a asp-action="Edit" asp-route-id="@note.Id"><i class="bi bi-pencil-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@note.Id"><i class="bi bi-trash-fill"></i></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        else
        {
            <p>You have not written any notes here!!</p>
        }

    </div>
</div>

<style>
    .btns-container {
        position: relative;
    }

    .top-btns {
        position: absolute;
        top: -0.6rem;
        right: 1rem;
    }

    .top-btns a {
        background-color: black;
        padding: 0.4rem;
        font-size: 1.2rem;
        border-radius: 50%;
        color: white;
    }
</style>